        <Label Content="Informatie" HorizontalAlignment="Left" Margin="49,348,0,0" VerticalAlignment="Top" Width="124" FontSize="22"/>
        <TextBox BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Margin="178,357,0,47" TextWrapping="Wrap" Text="" x:Name="informatieTekstBox" Width="300" FontSize="18"/>


    </Grid>
